{
  "name": "redmine-notifier",
  "version": "0.4.0",
  "scripts": {
    "start": "electron ./app/main.js",
    "prepare": "./bin/prepare.sh",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "./bin/lint-js.sh",
    "lint:css": "./bin/lint-css.sh",
    "build": "npm run build:osx && npm run build:win",
    "build:osx": "./bin/build-osx.sh",
    "build:win": "./bin/build-win.sh",
    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "./bin/pack-osx.sh",
    "pack:win": "./bin/pack-win.sh",
    "release": "npm run prepare && npm run pack"
  },
  "dependencies": {
    "node-notifier": "^4.5.0",
    "notie": "^2.1.0"
  },
  "devDependencies": {
    "csslint": "^0.10.0",
    "electron-builder": "^2.8.5",
    "electron-packager": "^5.2.1",
    "electron-prebuilt": "^0.36.10",
    "eslint": "^2.3.0"
  }
}
