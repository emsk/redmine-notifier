{
  "name": "redmine-notifier",
  "version": "0.5.0",
  "scripts": {
    "start": "electron ./app/main.js",
    "prepare": "./bin/prepare.sh",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:text",
    "lint:js": "./bin/lint-js.sh",
    "lint:css": "./bin/lint-css.sh",
    "lint:text": "./bin/lint-text.sh",
    "build": "npm run build:osx && npm run build:win",
    "build:osx": "./bin/build-osx.sh",
    "build:win": "./bin/build-win.sh",
    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "./bin/pack-osx.sh",
    "pack:win": "./bin/pack-win.sh",
    "test": "./bin/test.sh",
    "release": "npm run prepare && npm run pack"
  },
  "dependencies": {
    "node-notifier": "^4.5.0",
    "notie": "^3.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "csslint": "^0.10.0",
    "electron-builder": "~5.2.0",
    "electron-prebuilt": "1.2.2",
    "eslint": "^2.11.0",
    "mocha": "^2.5.3",
    "spectron": "~3.2.0",
    "textlint": "^6.9.0",
    "textlint-rule-write-good": "^0.1.4"
  },
  "build": {
    "app-bundle-id": "redmine-notifier",
    "app-category-type": "public.app-category.productivity",
    "asar": {
      "unpack": "**/app/{node_modules/node-notifier/vendor,images}/**"
    },
    "files": ["**/*", "!**/npm-debug\\.log", "!etc"],
    "app-copyright": "Copyright (c) 2015-2016 emsk",
    "osx": {
      "icon-size": 120,
      "contents": [
        { "x": 370, "y": 300, "type": "link", "path": "/Applications" },
        { "x": 130, "y": 300, "type": "file" }
      ],
      "target": "dmg"
    }
  }
}
